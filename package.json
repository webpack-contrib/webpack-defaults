{
  "name": "webpack-defaults",
  "version": "2.1.4",
  "description": "Defaults to be shared across webpack projects",
  "license": "MIT",
  "repository": "webpack-contrib/webpack-defaults",
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me"
  },
  "homepage": "https://github.com/webpack-contrib/webpack-defaults",
  "main": "lib/index.js",
  "bin": "bin/index.js",
  "engines": {
    "node": ">= 6.9.0"
  },
  "scripts": {
    "start": "npm run serve:dev index.js",
    "lint": "eslint --cache lib test index.js",
    "lint-staged": "lint-staged",
    "postinstall": "node script/post_install.js",
    "release": "standard-version",
    "serve:dev": "nodemon $2",
    "security": "nsp check",
    "test": "jest",
    "test:coverage": "jest --collectCoverageFrom='lib/**/*.js,index.js' --coverage",
    "test:watch": "jest --watch",
    "ci:coverage": "npm run test:coverage -- --runInBand",
    "ci:lint": "npm run lint && npm run security",
    "ci:test": "npm run test -- --runInBand",
    "defaults": "./bin/index.js"
  },
  "files": [
    "bin/",
    "lib/",
    "srcipt/",
    "templates/",
    "config.json"
  ],
  "keywords": [
    "webpack"
  ],
  "dependencies": {
    "chalk": "^2.3.0",
    "git-username": "^0.5.0",
    "mrm-core": "^2.6.0",
    "path-exists": "^3.0.0",
    "user-meta": "^1.0.0"
  },
  "devDependencies": {
    "@webpack-contrib/eslint-config-webpack": "^2.0.2",
    "cross-env": "^5.1.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.13.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "nsp": "^3.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.9.2",
    "standard-version": "^4.2.0"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/"
    ]
  }
}
